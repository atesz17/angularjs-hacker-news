{
    "env": {
        "browser": true
    },
    "extends": ["angular", "eslint:recommended"],
    "globals": {
      "require": true
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
